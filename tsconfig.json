{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "jsx": "react-jsx",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist-site",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@component/*": [
        "component/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    "eslint.config.mjs",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-site"
  ]
}